mixin etiquetas-p(letra, palavra)
	.letra
		.inicial
			span= letra 
		.etiquetas
			- for (var x = 0; x < 4; x++)
				button.etiqueta-btn(onclick="window.location.href='resultados.html'")= palavra
		hr

