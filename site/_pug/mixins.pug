mixin resultado(nCie, nPop, usos, acoes)
		.foto
		.dados
			.nomes
				h3.nome-cientifico: em= nCie
				.nome-popular= nPop
			.lista-tags
				.usos Usos da planta: 
					-
						var listausos = usos
					each tag in listausos
						a.tag(href="resultados.html")= tag
				.acoes Ações medicinais: 
					-
						var listaacoes = acoes
					each tag in listaacoes
						a.tag(href="resultados.html")= tag
			.data: em Atualizado em 31/02/2018
		hr
